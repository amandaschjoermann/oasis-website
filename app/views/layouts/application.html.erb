<!DOCTYPE html>
<html>
  <head>
    <title>ACNH The Oasis</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <%= favicon_link_tag 'https://emojis.wiki/emoji-pics/messenger/palm-tree-messenger.png' %>
    <script src="https://kit.fontawesome.com/418704681c.js" crossorigin="anonymous"></script>
  </head>

  <body class="preload">
    <div class="oasis-navbar py-2 px-4 d-flex justify-content-between sticky-top bg-white align-items-center shadow-sm">
      <div>
        <div class="server-icon">
          <%= link_to root_path do %>
            <%= image_tag "logo.png", alt: "alttext" %>
          <% end %>
        </div>
      </div>
      <div class="d-flex align-items-center">
        <div class="px-3 d-none d-md-block">
          <%= link_to category_path(Category.all.first) do %>
            <div class="d-flex align-items-center">
              Channel guides
              <i class="fas fa-map-signs brown-icon ml-3"></i>
            </div>
          <% end %>
        </div>
        <div class="px-3 d-none d-md-block">
          <%= link_to tips_path do %>
            <div class="d-flex align-items-center">
              Good to know
              <i class="far fa-life-ring green-icon ml-3"></i>
            </div>
          <% end %>
        </div>
        <div class="px-3 d-none d-md-block">
          <%= link_to bot_path(Bot.all.first) do %>
            <div class="d-flex align-items-center">
              Bot guides
              <i class="fas fa-code-branch blue-icon ml-3"></i>
            </div>
          <% end %>
        </div>
        <div class="px-3 d-none d-md-block">
          <%= link_to rules_path do %>
            <div class="d-flex align-items-center">
              Server rules
              <i class="far fa-bookmark tan-icon ml-3"></i>
            </div>
          <% end %>
        </div>
        <div class="px-3 drop-trigger">
          <%= image_tag current_user.image, alt: "alttext", height: 40, class: "rounded-circle fas fas-bars user-avatar" %>
          <div class="drop-content bg-white shadow-sm">

            <div class="d-block d-md-none">
              <%= link_to category_path(Category.all.first) do %>
                <div class="p-3 d-flex align-items-center justify-content-end green-border-bottom">
                  <div class="mr-3">Channel guides</div>
                  <i class="fas fa-map-signs brown-icon"></i>
                </div>
              <% end %>
            </div>

            <div class="d-block d-md-none">
              <%= link_to tips_path do %>
                <div class="p-3 d-flex align-items-center justify-content-end green-border-bottom">
                  <div class="mr-3">Good to know</div>
                  <i class="far fa-life-ring green-icon"></i>
                </div>
              <% end %>
            </div>

            <div class="d-block d-md-none">
              <%= link_to bot_path(Bot.all.first) do %>
                <div class="p-3 d-flex align-items-center justify-content-end green-border-bottom">
                  <div class="mr-3">Bot guides</div>
                  <i class="fas fa-code-branch blue-icon"></i>
                </div>
              <% end %>
            </div>

            <div class="d-block d-md-none">
              <%= link_to rules_path do %>
                <div class="p-3 d-flex align-items-center justify-content-end green-border-bottom">
                  <div class="mr-3">Server rules</div>
                  <i class="far fa-bookmark tan-icon"></i>
                </div>
              <% end %>
            </div>

            <%= link_to spreadsheets_path do %>
              <div class="p-3 d-flex align-items-center justify-content-end green-border-bottom">
                <div class="mr-3">Useful links</div>
                <i class="far fa-file-excel tan-icon"></i>
              </div>
            <% end %>

            <%= link_to infographics_path do %>
              <div class="p-3 d-flex align-items-center justify-content-end green-border-bottom">
                <div class="mr-3">Infographics</div>
                <i class="far fa-file-image tan-icon"></i>
              </div>
            <% end %>

            <%= link_to destroy_user_session_path, method: :delete do %>
              <div class="p-3 d-flex align-items-center justify-content-end green-border-bottom">
                <div class="mr-3">Log out</div>
                <i class="far fa-times-circle grey-icon"></i>
              </div>
            <% end %>
          </div>
        </div>
        <div>
        </div>
      </div>
    </div>
    <%= yield %>
    <div class="d-flex align-items-center discord-link">
      <i class="fab fa-discord mr-2"></i>
      <%= link_to "https://discord.gg/acnhoasis", "https://discord.gg/acnhoasis", target: "_blank" %>
    </div>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
